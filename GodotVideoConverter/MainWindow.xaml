<Window x:Class="GodotVideoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GodotVideoConverter.ViewModels"
        xmlns:local="clr-namespace:GodotVideoConverter"
        Title="Godot Video Converter" Height="750" Width="1050" WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop"
        Closing="Window_Closing">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:BoolToInverseConverter x:Key="BoolToInverseConverter"/>
        <local:ConvertButtonTextConverter x:Key="ConvertButtonTextConverter"/>
        <local:BooleanAndConverter x:Key="BooleanAndConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:GenerateAtlasButtonTextConverter x:Key="GenerateAtlasButtonTextConverter"/>
        <local:Converter x:Key="Converter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,3"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#005FB8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#003087"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="BorderBrush" Value="#005FB8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                                <Setter Property="BorderBrush" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>

        <Style x:Key="AlternativeButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>

        <Style x:Key="OrangeTipBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="BlueBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#FF3685B7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2F6396"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66A3FF"/>
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                                <Setter Property="BorderBrush" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0A5F0A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E8B2E"/>
                                <Setter Property="BorderBrush" Value="#107C10"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                                <Setter Property="BorderBrush" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FileListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="FileListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content: Two Columns -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN: Settings -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Conversion Settings -->
                    <GroupBox Header="Conversion Settings" Padding="8" Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Format:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Formats}"
                                      SelectedItem="{Binding SelectedFormat}"
                                      IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="Quality:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Qualities}"
                                      SelectedItem="{Binding SelectedQuality}"
                                      IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="Resolution:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Resolutions}"
                                      SelectedItem="{Binding SelectedResolution}"
                                      IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="OGV Mode:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding OgvModes}"
                                      SelectedItem="{Binding SelectedOgvMode}"
                                      Margin="0,0,0,8">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="IsOgvModeEnabled"/>
                                        <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="Keep Audio"
                                          IsChecked="{Binding KeepAudio}"
                                          IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBox Text="{Binding Fps}"
                                             Width="60"
                                             IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                             VerticalAlignment="Center"
                                             MaxLength="2"
                                             PreviewTextInput="NumbersOnly_PreviewTextInput"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Sprite Atlas Settings -->
                    <GroupBox Header="Sprite Atlas" Padding="8" Margin="0,0,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Frames:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding AtlasFps}"
                                         MaxLength="2"
                                         PreviewTextInput="NumbersOnly_PreviewTextInput"
                                         IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                         ToolTip="Select between 1 and 30 frames (5 or 10 recommended)"
                                         Margin="0,0,0,8"/>
                            </Grid>

                            <TextBlock Text="Layout:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding AtlasModes}"
                                      SelectedItem="{Binding SelectedAtlasMode}"
                                      IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="Resolution:" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding AtlasResolutions}"
                                      SelectedItem="{Binding SelectedAtlasResolution}"
                                      IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                      ToolTip="Medium resolution recommended"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- RIGHT COLUMN: Files and Info -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Output Folder -->
                    <GroupBox Header="Output Folder" Padding="8" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding OutputFolder}"
                                     IsReadOnly="True"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseOutputFolderCommand}"
                                    IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                    Style="{StaticResource ButtonStyle}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Files -->
                    <GroupBox Header="Files" Padding="8" Margin="0,0,0,8">
                        <Grid>
                            <StackPanel>
                                <Border BorderThickness="1" CornerRadius="3" BorderBrush="#CCCCCC">
                                    <ListBox ItemsSource="{Binding InputFiles}"
                                             Height="120"
                                             IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                                             SelectedIndex="{Binding SelectedFileIndex}"
                                             Style="{StaticResource FileListBoxStyle}"
                                             ItemContainerStyle="{StaticResource FileListBoxItemStyle}"
                                             KeyDown="FileListBox_KeyDown"/>
                                </Border>
                                <TextBlock Text="Drag files here"
                                           FontStyle="Italic"
                                           FontSize="11"
                                           Margin="0,3,0,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <Border Background="#B2616060"
                                    Visibility="{Binding IsLoadingFiles, Converter={StaticResource BoolToVisibilityConverter}}"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <TextBlock Text="Loading files..."
                                           Foreground="IndianRed"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Video Information -->
                    <Border BorderThickness="1"
                            CornerRadius="3"
                            Margin="0,0,0,8"
                            Padding="6"
                            Visibility="{Binding VideoInfo, Converter={StaticResource Converter}}"
                            Style="{StaticResource BlueBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="📹 Video Information" FontWeight="Bold" FontSize="11" Margin="0,0,0,4"/>
                            <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding VideoInfo}"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="10"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Recommendations -->
                    <Border BorderThickness="1"
                            CornerRadius="3"
                            Padding="6"
                            Margin="0,0,0,0"
                            Visibility="{Binding Recommendations, Converter={StaticResource Converter}}"
                            Style="{StaticResource OrangeTipBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="💡 Godot Recommendations" FontWeight="Bold" FontSize="11" Margin="0,0,0,4"/>
                            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding Recommendations}"
                                           TextWrapping="Wrap"
                                           FontSize="10"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- BOTTOM: Progress and Buttons -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <ProgressBar Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="18"
                         BorderThickness="1"
                         Margin="0,0,0,8"/>
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       FontSize="12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Button Content="{Binding IsConverting, Converter={StaticResource ConvertButtonTextConverter}}"
                        Command="{Binding ConvertCommand}"
                        IsEnabled="{Binding IsGeneratingAtlas, Converter={StaticResource BoolToInverseConverter}}"
                        Style="{StaticResource BlueButtonStyle}"
                        Height="32"
                        FontSize="12"
                        MinWidth="120"
                        Margin="0,0,8,0"/>

                <Button Content="{Binding IsGeneratingAtlas, Converter={StaticResource GenerateAtlasButtonTextConverter}}"
                        Command="{Binding GenerateAtlasCommand}"
                        IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                        Style="{StaticResource GreenButtonStyle}"
                        Height="32"
                        FontSize="12"
                        MinWidth="140"
                        Margin="8,0,0,0"
                        ToolTip="Don't panic if the app doesn't response during the generation"/>
            </StackPanel>

            <UniformGrid Rows="1" Columns="3">
                <Button Content="Clear List"
                        Command="{Binding ClearListCommand}"
                        IsEnabled="{Binding IsConverting, Converter={StaticResource BoolToInverseConverter}}"
                        Style="{StaticResource ButtonStyle}"
                        Height="30"
                        FontSize="11"
                        Margin="0,0,4,0"/>
                <Button Content="Open Output Folder"
                        Command="{Binding OpenOutputFolderCommand}"
                        Style="{StaticResource ButtonStyle}"
                        Height="30"
                        FontSize="11"
                        Margin="4,0"/>
                <Button Content="About"
                        Click="AboutButton_Click"
                        Style="{StaticResource ButtonStyle}"
                        Height="30"
                        FontSize="11"
                        Margin="4,0,0,0"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>