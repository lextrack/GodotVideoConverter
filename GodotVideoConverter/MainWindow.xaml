<Window x:Class="GodotVideoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GodotVideoConverter.ViewModels"
        xmlns:local="clr-namespace:GodotVideoConverter"
        Title="Godot Video Converter" Height="850" Width="1280" WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop"
        Closing="Window_Closing">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:BoolToInverseConverter x:Key="BoolToInverseConverter"/>
        <local:ConvertButtonTextConverter x:Key="ConvertButtonTextConverter"/>
        <local:BooleanAndConverter x:Key="BooleanAndConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:GenerateAtlasButtonTextConverter x:Key="GenerateAtlasButtonTextConverter"/>
        <local:Converter x:Key="Converter"/>
        <local:DynamicActionButtonTextConverter x:Key="DynamicActionButtonTextConverter"/>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Info Border Style -->
        <Style x:Key="InfoBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Primary Action Button Style (Convert) -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#66A3FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A7BC8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Action Button Style (Generate Atlas) -->
        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5CA85C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#78E878"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A9D4A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main TabControl -->
        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}">
            <TabControl.IsEnabled>
                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                    <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                    <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                </MultiBinding>
            </TabControl.IsEnabled>
            <!-- TAB 1: VIDEO CONVERSION -->
            <TabItem Header="🎬 Video Conversion">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT: Settings -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                        <StackPanel>
                            <!-- Output Folder -->
                            <TextBlock Text="Output Folder" Style="{StaticResource SectionHeaderStyle}"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding OutputFolder}"
                                         IsReadOnly="True"
                                         VerticalAlignment="Center"
                                         Padding="8,6"
                                         Margin="0,0,8,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Command="{Binding BrowseOutputFolderCommand}"
                                        Padding="12,6">
                                        <Button.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                            </MultiBinding>
                                        </Button.IsEnabled>
                                    </Button>
                            </Grid>

                            <!-- Format -->
                            <TextBlock Text="Format" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Formats}"
                                      SelectedItem="{Binding SelectedFormat}"
                                      Padding="8,6"
                                      Margin="0,0,0,15">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                        <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <!-- Quality -->
                            <TextBlock Text="Quality" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Qualities}"
                                      SelectedItem="{Binding SelectedQuality}"
                                      Padding="8,6"
                                      Margin="0,0,0,15">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                        <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <!-- Resolution -->
                            <TextBlock Text="Resolution" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding Resolutions}"
                                      SelectedItem="{Binding SelectedResolution}"
                                      Padding="8,6"
                                      Margin="0,0,0,15">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                        <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <!-- OGV Mode -->
                            <TextBlock Text="OGV Mode" Style="{StaticResource SectionHeaderStyle}"/>
                            <ComboBox ItemsSource="{Binding OgvModes}"
                                      SelectedItem="{Binding SelectedOgvMode}"
                                      Padding="8,6"
                                      Margin="0,0,0,15">
                                <ComboBox.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="IsOgvModeEnabled"/>
                                        <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                        <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                    </MultiBinding>
                                </ComboBox.IsEnabled>
                            </ComboBox>

                            <!-- Advanced Options -->
                            <Expander Header="⚙ Advanced Options" IsExpanded="False" Margin="0,0,0,10">
                                <StackPanel Margin="0,10,0,0">
                                    <CheckBox Content="Keep Audio"
                                              IsChecked="{Binding KeepAudio}"
                                              Margin="0,0,0,12">
                                        <CheckBox.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                            </MultiBinding>
                                        </CheckBox.IsEnabled>
                                    </CheckBox>

                                    <TextBlock Text="FPS (Frame Rate)" Style="{StaticResource SectionHeaderStyle}"/>
                                    <TextBox Text="{Binding Fps}"
                                             Padding="8,6"
                                             MaxLength="3"
                                             PreviewTextInput="NumbersOnly_PreviewTextInput"
                                             ToolTip="Leave empty to keep original FPS">
                                        <TextBox.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                            </MultiBinding>
                                        </TextBox.IsEnabled>
                                    </TextBox>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- RIGHT: Files and Info -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Files Section -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Files" Style="{StaticResource SectionHeaderStyle}"/>
                            <Grid Height="180" Margin="0,0,0,15">
                                <Border BorderThickness="1" CornerRadius="4">
                                    <Grid>
                                        <ListBox ItemsSource="{Binding InputFiles}"
                                                 SelectedIndex="{Binding SelectedFileIndex}"
                                                 KeyDown="FileListBox_KeyDown"
                                                 BorderThickness="0">
                                            <ListBox.IsEnabled>
                                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                                    <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                                    <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                                </MultiBinding>
                                            </ListBox.IsEnabled>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Padding" Value="10,6"/>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                        </ListBox>
                                        <TextBlock Text="📁 Drag video files here or use the file dialog"
                                                   FontStyle="Normal"
                                                   Opacity="0.6"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding InputFiles.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <Border Background="#CC000000"
                                        Visibility="{Binding IsLoadingFiles, Converter={StaticResource BoolToVisibilityConverter}}"
                                        CornerRadius="4">
                                    <TextBlock Text="⏳ Loading files..."
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- Info Section -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Video Information -->
                                <Border Style="{StaticResource InfoBorderStyle}"
                                        Visibility="{Binding VideoInfo, Converter={StaticResource Converter}}">
                                    <StackPanel>
                                        <TextBlock Text="📹 Video Information"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding VideoInfo}"
                                                   TextWrapping="Wrap"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Opacity="0.8"/>
                                    </StackPanel>
                                </Border>

                                <!-- Godot Recommendations -->
                                <Border Style="{StaticResource InfoBorderStyle}"
                                        Visibility="{Binding Recommendations, Converter={StaticResource Converter}}">
                                    <StackPanel>
                                        <TextBlock Text="💡 Godot Recommendations"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Recommendations}"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Opacity="0.8"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 2: SPRITE ATLAS -->
            <TabItem Header="🎨 Sprite Atlas">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT: Atlas Settings -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Atlas Configuration"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <!-- Frames per Second -->
                        <TextBlock Text="Frames per Second" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBox Text="{Binding AtlasFps}"
                                 MaxLength="2"
                                 Padding="8,6"
                                 PreviewTextInput="NumbersOnly_PreviewTextInput"
                                 ToolTip="Recommended: between 1 and 30 frames"
                                 Margin="0,0,0,15">
                            <TextBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                    <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                </MultiBinding>
                            </TextBox.IsEnabled>
                        </TextBox>

                        <!-- Layout Mode -->
                        <TextBlock Text="Layout Mode" Style="{StaticResource SectionHeaderStyle}"/>
                        <ComboBox ItemsSource="{Binding AtlasModes}"
                                  SelectedItem="{Binding SelectedAtlasMode}"
                                  Padding="8,6"
                                  Margin="0,0,0,15">
                            <ComboBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                    <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                </MultiBinding>
                            </ComboBox.IsEnabled>
                        </ComboBox>

                        <!-- Frame Resolution -->
                        <TextBlock Text="Frame Resolution" Style="{StaticResource SectionHeaderStyle}"/>
                        <ComboBox ItemsSource="{Binding AtlasResolutions}"
                                  SelectedItem="{Binding SelectedAtlasResolution}"
                                  Padding="8,6"
                                  ToolTip="Medium resolution recommended for most cases"
                                  Margin="0,0,0,20">
                            <ComboBox.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                    <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                </MultiBinding>
                            </ComboBox.IsEnabled>
                        </ComboBox>

                        <!-- Info Box -->
                        <Border Style="{StaticResource InfoBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="ℹ About Sprite Atlas"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <TextBlock TextWrapping="Wrap" FontSize="11" Opacity="0.8">
                                    <Run Text="Sprite Atlas combines all video frames into a single image. Perfect for:"/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="• Animated sprites in Godot"/>
                                    <LineBreak/>
                                    <Run Text="• 2D game animations"/>
                                    <LineBreak/>
                                    <Run Text="• Frame-by-frame playback"/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="⚠ Large videos may take time to process."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- RIGHT: Preview/Files -->
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Source Files" Style="{StaticResource SectionHeaderStyle}"/>
                            <Border BorderThickness="1"
                                    CornerRadius="4"
                                    Height="400"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <ListBox ItemsSource="{Binding InputFiles}"
                                             BorderThickness="0">
                                        <ListBox.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                                            </MultiBinding>
                                        </ListBox.IsEnabled>
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Padding" Value="10,6"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                    <TextBlock Text="📁 No files loaded. Switch to Video Conversion tab to add files."
                                               FontStyle="Normal"
                                               Opacity="0.6"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Margin="20">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding InputFiles.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Note: Use the main action button at the bottom -->
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 3: ABOUT -->
            <TabItem Header="ℹ About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30" MaxWidth="600" HorizontalAlignment="Center">
                        <TextBlock Text="Godot Video Converter"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Basic video conversion tool for Godot Engine"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,0,0,30"/>

                        <Border Style="{StaticResource InfoBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Features" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                    <Run Text="• Convert videos to OGV, MP4, WebM, and GIF formats"/>
                                    <LineBreak/>
                                    <Run Text="• Generate sprite atlases for 2D animations"/>
                                    <LineBreak/>
                                    <Run Text="• Multiple quality presets for each format"/>
                                    <LineBreak/>
                                    <Run Text="• Special OGV modes optimized for Godot"/>
                                    <LineBreak/>
                                    <Run Text="• Batch conversion support"/>
                                    <LineBreak/>
                                    <Run Text="• Real-time video information and recommendations"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Format Guide" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                    <Run Text="OGV (Theora): Default format for Godot, good compatibility"/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="MP4 (H.264): Best quality and compression, widely supported"/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="WebM (VP9): Open format, excellent for web"/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="GIF: Simple animations, universal compatibility"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border BorderThickness="1" CornerRadius="4" Padding="15">
                            <StackPanel>
                                <TextBlock Text="System Information" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <TextBlock Opacity="0.7">
                                    <Run Text="Godot Video Converter: 1.0.0.9"/>
                                    <LineBreak/>
                                    <Run Text="FFmpeg: 7.1.1"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- BOTTOM: Progress and Buttons (Global) -->
        <Border Grid.Row="1" BorderThickness="0,1,0,0" Padding="15">
            <StackPanel>
                <!-- Progress Bar -->
                <ProgressBar Minimum="0"
                             Maximum="100"
                             Value="{Binding Progress}"
                             Height="22"
                             Margin="0,0,0,10"/>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Margin="0,0,0,12"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>

                <!-- Main Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding ExecutePrimaryActionCommand}"
                            Height="40"
                            MinWidth="160"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,8"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4A90E2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding SelectedTabIndex}" Value="0"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter TargetName="border" Property="Background" Value="#66A3FF"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding SelectedTabIndex}" Value="0"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsPressed}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter TargetName="border" Property="Background" Value="#3A7BC8"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding SelectedTabIndex}" Value="1"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter TargetName="border" Property="Background" Value="#78E878"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding SelectedTabIndex}" Value="1"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsPressed}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter TargetName="border" Property="Background" Value="#4A9D4A"/>
                                                </MultiDataTrigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#888888"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTabIndex}" Value="1">
                                        <Setter Property="Background" Value="#5AA85C"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <MultiBinding Converter="{StaticResource DynamicActionButtonTextConverter}">
                                <Binding Path="SelectedTabIndex"/>
                                <Binding Path="IsConverting"/>
                                <Binding Path="IsGeneratingAtlas"/>
                            </MultiBinding>
                        </Button.Content>
                        <Button.IsEnabled>
                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                            </MultiBinding>
                        </Button.IsEnabled>
                    </Button>

                    <Button Content="Clear List"
                            Command="{Binding ClearListCommand}"
                            Height="36"
                            Padding="16,8"
                            MinWidth="120"
                            Margin="10,0,10,0">
                        <Button.IsEnabled>
                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                <Binding Path="IsConverting" Converter="{StaticResource BoolToInverseConverter}"/>
                                <Binding Path="IsGeneratingAtlas" Converter="{StaticResource BoolToInverseConverter}"/>
                            </MultiBinding>
                        </Button.IsEnabled>
                    </Button>

                    <Button Content="Open Output"
                            Command="{Binding OpenOutputFolderCommand}"
                            Height="36"
                            Padding="16,8"
                            MinWidth="120"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
