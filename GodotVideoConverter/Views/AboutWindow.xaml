<Window x:Class="GodotVideoConverter.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Godot Video Converter" 
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Godot Video Converter" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0" Text="Version 1.0.0.2" Margin="0,25,0,0" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,10">
            <Run Text="A specialized tool for converting videos to formats optimized for Godot Engine, particularly OGV format."/>
            <LineBreak/><LineBreak/>
            <Run Text="Features:" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="- Convert to OGV (Default for Godot), MP4, WebM"/>
            <LineBreak/>
            <Run Text="- Multiple quality presets"/>
            <LineBreak/>
            <Run Text="- Resolution selector"/>
            <LineBreak/>
            <Run Text="- Sprite atlas generator"/>
            <LineBreak/>
            <Run Text="- FPS adjustment"/>
            <LineBreak/>
            <Run Text="- OGV-specific optimization modes"/>
            <LineBreak/><LineBreak/>
            <Run Text="Developed by Lextrack"/>
            <LineBreak/><LineBreak/>
            <Run Text="This application uses FFmpeg and FFprobe for video processing."/>
            <LineBreak/>
            <Run Text="FFmpeg is licensed under LGPL/GPL. More info: https://ffmpeg.org/legal.html"/>
        </TextBlock>

        <Button Grid.Row="2" Content="Close" Width="80" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </Grid>
</Window>
